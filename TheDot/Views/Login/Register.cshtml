@using TheDot.Models.User
@model CreateUserViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container mx-auto px-6 py-8 max-w-lg">
    <h2 class="text-3xl font-bold text-center mb-8">Register</h2>

    <form asp-action="Register" method="post" class="space-y-6">

        <div>
            <label asp-for="FirstName" class="block text-lg font-medium text-gray-300 mb-2"></label>
            <input asp-for="FirstName" class="w-full px-4 py-2 bg-gray-800 border border-gray-600 rounded-lg text-gray-100 focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:outline-none" />
            <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="LastName" class="block text-lg font-medium text-gray-300 mb-2"></label>
            <input asp-for="LastName" class="w-full px-4 py-2 bg-gray-800 border border-gray-600 rounded-lg text-gray-100 focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:outline-none" />
            <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Email" class="block text-lg font-medium text-gray-300 mb-2"></label>
            <input asp-for="Email" class="w-full px-4 py-2 bg-gray-800 border border-gray-600 rounded-lg text-gray-100 focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:outline-none" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="PhoneNumber" class="block text-lg font-medium text-gray-300 mb-2"></label>
            <input asp-for="PhoneNumber" class="w-full px-4 py-2 bg-gray-800 border border-gray-600 rounded-lg text-gray-100 focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:outline-none" />
            <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Password" class="block text-lg font-medium text-gray-300 mb-2"></label>
            <input asp-for="Password" type="password" class="w-full px-4 py-2 bg-gray-800 border border-gray-600 rounded-lg text-gray-100 focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:outline-none" />
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="ConfirmPassword" class="block text-lg font-medium text-gray-300 mb-2"></label>
            <input asp-for="ConfirmPassword" type="password" class="w-full px-4 py-2 bg-gray-800 border border-gray-600 rounded-lg text-gray-100 focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:outline-none" />
            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex justify-between items-center">
            <button type="submit" class="bg-indigo-600 hover:bg-indigo-800 text-white font-semibold py-2 px-4 rounded-lg transition w-full mr-4">Register</button>
            <a asp-controller="Login" asp-action="Index" class="bg-gray-600 hover:bg-gray-700 text-white font-semibold py-2 px-4 rounded-lg transition w-full text-center">Go Back</a>
        </div>
    </form>
</div>