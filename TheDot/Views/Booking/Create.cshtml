@using TheDot.Models.Booking
@model CreateBookingViewModel

@{
    ViewData["Title"] = "Create a Booking";
}

<div class="container mx-auto px-6 py-8 max-w-lg">
    <h2 class="text-3xl font-bold text-center mb-8">Create Booking</h2>

    <form asp-action="Create" method="post" class="space-y-6">

        <div>
            <label asp-for="UserId" class="block text-lg font-medium text-gray-300 mb-2">User ID</label>
            <input asp-for="UserId" class="w-full px-4 py-2 bg-gray-800 border border-gray-600 rounded-lg text-white focus:border-indigo-500 focus:ring-indigo-500" />
            <span asp-validation-for="UserId" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="TableId" class="block text-lg font-medium text-gray-300 mb-2">Table ID</label>
            <input asp-for="TableId" class="w-full px-4 py-2 bg-gray-800 border border-gray-600 rounded-lg text-white focus:border-indigo-500 focus:ring-indigo-500" />
            <span asp-validation-for="TableId" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="NumberOfGuests" class="block text-lg font-medium text-gray-300 mb-2">Number of Guests</label>
            <input asp-for="NumberOfGuests" class="w-full px-4 py-2 bg-gray-800 border border-gray-600 rounded-lg text-white focus:border-indigo-500 focus:ring-indigo-500" />
            <span asp-validation-for="NumberOfGuests" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="ReservationDateTime" class="block text-lg font-medium text-gray-300 mb-2">Reservation Date and Time</label>
            <input asp-for="ReservationDateTime" class="w-full px-4 py-2 bg-gray-800 border border-gray-600 rounded-lg text-white focus:border-indigo-500 focus:ring-indigo-500" type="datetime-local" />
            <span asp-validation-for="ReservationDateTime" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <button type="submit" class="bg-indigo-600 hover:bg-indigo-800 text-white font-semibold py-2 px-4 rounded-lg transition w-full">
                Create Booking
            </button>
        </div>
    </form>
</div>
