@model TheDot.Models.Booking.UpdateBookingViewModel

@{
        ViewData["Title"] = "Edit booking";
}

<div class="bg-gray-800 text-white rounded-lg shadow-lg max-w-md w-full mx-auto p-6">
    <h2 class="text-lg font-semibold mb-4">Edit Booking</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="BookingId" />

        <div class="mb-4">
            <label asp-for="TableId" class="block text-gray-300">Table ID</label>
            <input asp-for="TableId" type="number" class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white" />
        </div>

        <div class="mb-4">
            <label asp-for="NumberOfGuests" class="block text-gray-300">Number of Guests</label>
            <input asp-for="NumberOfGuests" type="number" class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white" />
        </div>

        <div class="mb-4">
            <label asp-for="ReservationDateTime" class="block text-gray-300">Reservation Date and Time</label>
            <input asp-for="ReservationDateTime" type="datetime-local" class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white" />
        </div>

        <div class="mb-4">
            <label asp-for="EndDateTime" class="block text-gray-300">End Date and Time</label>
            <input asp-for="EndDateTime" type="datetime-local" class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white" />
        </div>

        <button type="submit" class="bg-indigo-600 hover:bg-indigo-800 text-white py-2 px-4 rounded-lg mt-4 transition w-full">
            Save changes
        </button>
    </form>
</div>
